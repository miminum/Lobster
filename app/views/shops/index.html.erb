<div class="container-fluid text-center">
  <form>
    <div class="form-group row my-4">
      <div class="col-sm-10 col-10">
        <input type="email" class="form-control w-100" id="inputEmail3" placeholder="Search for your food here">
      </div>
      <div class="col-2">
        <%= link_to shops_path, class: "btn btn-primary" do %>
            <%= fa_icon "search", text: "Search" %>
        <% end %>
      </div>
    </div>
  </form>
  <%= form_with(model: @shop, local: true) do |form| %>

    <%= form.label "Filter" %>
    <%= form.select(:cuisine_type, Shop::CUISINE_TYPES, {}, { :class => 'custom-select' }) %>


  <% end %>
</div>

<div class="row mt-5 m-0 p-0">
  <% @shops.each_with_index do |shop, index| %>
    <div class="col-12 col-lg-4">
      <div class="shop-lists">
        <%= link_to shop_path(shop) do %>
          <%= image_tag shop.shop_photo_url(:medium), class: "w-100" %>
        <% end %>
      </div>
      <h6 class="text-black"><%= shop.shop_name %> 
        <em class="text-grey"><%= shop.cuisine_type %></em>
        <span class="float-right"><%= fa_icon "car", text: "Pickup only" %></span>
        <em class="float-right"><%= "#{shop.suburb}" %></em>
      </h6>
    </div>
    <% if index > 0 && index % 3 == 0 %>
    </div>
    <div class="row">
    <% end %>
  <% end %>
</div>
