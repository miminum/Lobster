<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Buyer</th>
      <th>Shop</th>
      <th>Delivery</th>
      <th>Total price</th>
      <th>Charge identifier</th>
      <th>Payment success</th>
      <th>Mark as done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.buyer %></td>
        <td><%= order.shop %></td>
        <td><%= order.delivery %></td>
        <td><%= order.total_price %></td>
        <td><%= order.charge_identifier %></td>
        <td><%= order.payment_success %></td>
        <td><%= order.mark_as_done %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

