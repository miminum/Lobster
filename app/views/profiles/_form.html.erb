<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mt-4">
    <div class="col-md-5 offset-md-1 col-12 mb-3">
      <label for="validationDefault01">First name</label>
      <%= form.text_field :first_name, id: :profile_first_name, class: "form-control" %>
    </div>
    <div class="col-md-5 col-12 mb-3">
      <%= form.label 'Last Name' %>
     <%= form.text_field :last_name, id: :profile_last_name, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="offset-md-1 col-md-5 col-12">
      <%= form.label 'Phone Number' %>
      <%= form.text_field :phone_number, id: :profile_phone_number, class: "form-control"  %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-1 col-md-5 col-12">
      <%= form.label :street_address %>
      <%= form.text_field :street_address, id: :profile_street_address, class: "form-control" %>
    </div>
   
    <div class="col-md-3 col-6">
      <%= form.label :suburb %>
      <%= form.text_field :suburb, id: :profile_suburb, class: "form-control" %>
    </div>
  
    <div class="col-6 col-md-2">
      <%= form.label :state %>
      <%= form.select(:state, Profile::STATES, {}, { :class => 'custom-select form-control' }) %> 
    </div>
  </div>

  <div class="actions container-fluid text-center mt-5">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
