<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   
  <div class="field">
    <%= form.label 'First Name' %>
    <%= form.text_field :first_name, id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.label 'Last Name' %>
    <%= form.text_field :last_name, id: :profile_last_name %>
  </div>

  <div class="field">
    <%= form.label 'Phone Number' %>
    <%= form.text_field :phone_number, id: :profile_phone_number %>
  </div>

  <div class="field">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, id: :profile_street_address %>
  </div>

  <div class="field">
    <%= form.label :suburb %>
    <%= form.text_field :suburb, id: :profile_suburb %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.select(:state, Profile::STATES, {}, { :class => 'custom-select' }) %> 
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
