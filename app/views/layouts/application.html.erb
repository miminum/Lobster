<!DOCTYPE html>
<html>
  <head>
    <title>Lobster</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Cantata+One|Lato:400,400i|Lobster" rel="stylesheet">
  </head>

  <body>
    <div class="container px-0 pb-0">
      <nav class="container-fluid bg-grey pb-0 navbar-shadow">
        <a class="navbar-brand navbar-title" href="/shops">Lobster</a>
        <% if user_signed_in? %>
          <%= link_to 'Sign out', destroy_user_session_path, class: 'btn btn-secondary float-right mr-1 mt-2', method: :delete %>
          <%= link_to dashboard_path, class: "btn float-right ml-1 mr-3 navbar-title" do %>
            <%= fa_icon "user" %>
          <% end %>
          <%= link_to conversations_path, class: "btn float-right mx-1 navbar-title" do %>
            <%= fa_icon "envelope" %>
          <% end %>
          <% if current_user.shop %>
            <%= link_to seller_profile_path, class: "btn float-right mx-1 navbar-title" do %>
              <%= fa_icon "shopping-cart" %>
            <% end %>
          <% end %>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-secondary float-right mx-1 mt-2' %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary float-right mx-1 mt-2' %>
        <% end %>
      </nav>
      <%= yield %>
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span>
    </div>
  </body>
</html>
