<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this Seller Profile from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image, id: :item_image %>
  </div>
  <div class="field">
      Remove attachment: <%= form.check_box :remove_image %>
  </div>

  <div class="field">
    <%= form.label :allergies %>
    <%= form.text_area :allergies, id: :item_allergies %>
  </div>

  <div class="field">
    <%= form.label 'Vegetarian?'%>
    <%= form.check_box :vegetarian %>
  </div>

  <div class="field">
    <%= form.label 'Price ($)' %><br>
    <%= form.text_field :price, id: :item_price %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
